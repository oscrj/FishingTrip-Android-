<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/catchDialogImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/row_catch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_catch_logo" />

    <TextView
        android:id="@+id/catchDialogTxtSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/row_catch"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/catchDialogImage"
        app:layout_constraintTop_toTopOf="@+id/catchDialogImage" />

    <TextView
        android:id="@+id/catchDialogTxtLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/row_catch"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="@+id/catchDialogTxtSpecies"
        app:layout_constraintTop_toBottomOf="@+id/catchDialogTxtSpecies" />

    <TextView
        android:id="@+id/catchDialogTxtWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/row_catch"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="@+id/catchDialogTxtLength"
        app:layout_constraintTop_toBottomOf="@+id/catchDialogTxtLength" />

    <TextView
        android:id="@+id/catchDialogTxtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/row_catch"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="@+id/catchDialogTxtWeight"
        app:layout_constraintTop_toBottomOf="@+id/catchDialogTxtWeight" />
</androidx.constraintlayout.widget.ConstraintLayout>